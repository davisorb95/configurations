{
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 14,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    // "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "editor.minimap.enabled": false,
    "workbench.editor.showTabs": "none",
    "explorer.openEditors.visible": 4,
    "editor.dragAndDrop": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "explorer.compactFolders": false,
    "editor.renderWhitespace": "selection",
    "workbench.list.horizontalScrolling": true,
    "workbench.sideBar.location": "left",
    "workbench.tree.indent": 20,
    "editor.bracketPairColorization.enabled": true,
    "symbols.hidesExplorerArrows": false,
    "workbench.iconTheme": "symbols",
    "workbench.productIconTheme": "fluent-icons",
    "editor.fontFamily": "'DankMono Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 2.1,
    "terminal.integrated.fontFamily": "'DankMono Nerd Font', Menlo, Monaco",
    "breadcrumbs.symbolPath": "off",
    "window.zoomLevel": 0.7,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.lightbulb.enabled": "off",
    // Actions
    "editor.codeActionsOnSave": {
        "source.addMissingImports": "always",
    },
    "[typescript]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": [
            "source.addMissingImports",
            "source.fixAll.eslint"
        ]
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    // Extensions
    "focus.opacity": "0.7",
    "focus.highlightRange": "block",
    "conventionalCommits.showNewVersionNotes": false,
    "oneDarkPro.vivid": true,
    "oneDarkPro.bold": true,
    "workbench.statusBar.visible": false,
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.activityBar.location": "hidden",
}
